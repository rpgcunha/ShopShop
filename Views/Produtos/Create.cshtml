@model ShopShop.Models.Produto

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label">Categoria</label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PrecoCont" class="control-label">Continente</label>
                <input asp-for="PrecoCont" class="form-control" />
                <span asp-validation-for="PrecoCont" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoPD" class="control-label">Pingo Doce</label>
                <input asp-for="PrecoPD" class="form-control" />
                <span asp-validation-for="PrecoPD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoMerc" class="control-label">Mercadona</label>
                <input asp-for="PrecoMerc" class="form-control" />
                <span asp-validation-for="PrecoMerc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
