@model ShopShop.Models.Produto

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Tem a certeza que pretende eliminar?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Continente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoCont)€
        </dd>
        <dt class = "col-sm-2">
            Pingo Doce
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoPD)€
        </dd>
        <dt class = "col-sm-2">
            Mercadona
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoMerc)€
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
